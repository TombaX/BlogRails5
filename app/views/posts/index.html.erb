<h1> Все статьи: </h1>


<% @posts.each do |post| %>
	<article class="post">
		<section class="post-head">
			<h2><%= link_to post.title, post_path(post)%></h2>
				<section class="post-summary clearfix">
				<%= post.summary %>
				<%= image_tag post.image.url(:thumb), class: 'img-thumbnail thumb' if post.image? %>
				</section>
			<small>
				<time><%= post.created_at.to_date.strftime("%d %B, %Y") %>
				</time>
				|
				<%= link_to 'Изменить', edit_post_path(post)%>
				|
				<%= link_to 'Удалить', post_path(post), method: :delete, data: {confirm: 'Вы серьезно?'}%>
			</small>
		</section>

		
	</article>
<% end %>

